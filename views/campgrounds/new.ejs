<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label for="title" class="form-label">Name:</label>
                    <input type="text" id="title" , name="campground[title]" placeholder="Campground's name"
                        class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" id="location" , name="campground[location]" placeholder="Campground's location"
                        class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>

                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Url:</label>
                    <input type="text" id="image" , name="campground[image]" placeholder="Campground's Image"
                        class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea type="text" id="description" , name="campground[description]"
                        placeholder="Campground's Description" class="form-control" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" , name="campground[price]" placeholder="0.00" class="form-control"
                            aria-describedby="price-label" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Save Campground</button>
                </div>
            </form>
            <footer>
                <a href="/campgrounds" class="btn btn-danger">Cancel</a>
            </footer>
        </div>
    </div>

    